---
layout: base.njk
---
<section class="container">
  <section>
    <h1>Past 24 hours</h1>
    <p class="lead">Coronavirus (COVID-19) cases around the world</p>
  </section>

  <section class="stats">
    <article class="stats_stat">
      <h3 class="stats_count">{{ todayCases|number_format  }}</h3>
      <p class="stats_type">Cases</p>
    </article>
    <article class="stats_stat">
      <h3 class="stats_count">{{ todayDeaths|number_format  }}</h3>
      <p class="stats_type">Deaths</p>
    </article>
    <article class="stats_stat">
      <h3 class="stats_count">{{ todayRecovered|number_format  }}</h3>
      <p class="stats_type">Recovered</p>
    </article>
  </section>
  <section class="last-updated">
    <p>Last updated: {{ updated | date('DD MMM YYYY H:ma') }}</p>
  </section>

  <section>
    <h2 class="lead">COVID-19 daily stats update for all the continents and countries</h2>
    <section class="continents">
      {%- for item in continents -%}
        <article class="continents_continent">
          <h3 class="lead underlined">{{ item.continent | safe }}</h3>
          <ul class="countries">
            {%- for countryName in item.countries -%}
              <li>
                <a class="countries_country" href="/countries/{{ countryName | slug }}/">{{ countryName }}</a>
              <li>
            {%- endfor -%}
          </ul>
        </article>
      {%- endfor -%}
    </section>
  </section>
</section>