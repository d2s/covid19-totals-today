---
layout: base.njk
---
<section class="container-fluid bg-random">
  <section class="container">
    <section>
      <h1 class="underlined">Past 24 hours</h1>
      <p class="lead">Coronavirus (COVID-19) global statistics</p>
    </section>

    <section class="stats">
      <article class="stats_stat">
        <h3 class="stats_type">Cases</h3>
        <div class="stats_count">{{ todayCases|number_format  }}</div>
      </article>
      <article class="stats_stat">
        <h3 class="stats_type">Deaths</h3>
        <div class="stats_count">{{ todayDeaths|number_format  }}</div>
      </article>
      <article class="stats_stat">
        <h3 class="stats_type">Recovered</h3>
        <div class="stats_count">{{ todayRecovered|number_format  }}</div>
      </article>
    </section>
  </section>
</section>

<section class="container">
    <h2 class="lead stats-detail">Coronavirus (COVID-19) cases from around the world</h2>
    <section class="continents">
      {%- for item in continents -%}
        <article class="continents_continent">
          <h3 class="lead underlined">{{ item.continent | safe }}</h3>
          <ul class="countries">
            {%- for countryName in item.countries -%}
              <li>
                <a class="countries_country" href="/countries/{{ countryName | slug }}/">{{ countryName }}</a>
              <li>
            {%- endfor -%}
          </ul>
        </article>
      {%- endfor -%}
    </section>
    <section class="last-updated">
      <p>Last updated: {{ updated | date('DD MMM YYYY H:mma') }}</p>
    </section>
  </section>
</section>