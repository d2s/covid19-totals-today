---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---

<?xml version="1.0" encoding="utf-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <url>
    <loc>{{ '/' | absoluteUrl }}</loc>
    <lastmod>{{ now | date('YYYY-MM-DD[T]HH:mm:ss[Z]') }}</lastmod>
    <changefreq>daily</changefreq>
  </url>
  {# <url>
    <loc>{{ '/terms-conditions' | absoluteUrl }}</loc>
    <lastmod>{{ now | date('YYYY-MM-DD[T]HH:mm:ss[Z]') }}</lastmod>
    <changefreq>monthly</changefreq>
  </url>
  <url>
    <loc>{{ '/privacy-policy' | absoluteUrl }}</loc>
    <lastmod>{{ now | date('YYYY-MM-DD[T]HH:mm:ss[Z]') }}</lastmod>
    <changefreq>monthly</changefreq>
  </url> #}

  {%- for item in continents -%}
    <url>
      <loc>{{ '/continents/' | absoluteUrl }}{{ item.continent | slug  }}/</loc>
      <lastmod>{{ item.updated | date('YYYY-MM-DD[T]HH:mm:ss[Z]') }}</lastmod>
      <changefreq>hourly</changefreq>
    </url>

    {%- for countryName in item.countries -%}
      <url>
        <loc>{{ '/countries/' | absoluteUrl }}{{ countryName | slug  }}/</loc>
        <lastmod>{{ item.updated | date('YYYY-MM-DD[T]HH:mm:ss[Z]') }}</lastmod>
        <changefreq>hourly</changefreq>
      </url>
    {%- endfor -%}
  {%- endfor -%}
</urlset>